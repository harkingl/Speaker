<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">
        <ImageView
            android:id="@+id/blog_detail_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <com.android.speaker.base.component.TitleTagView
                android:id="@+id/blog_detail_title_voice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textSize="@dimen/blog_detail_title_text_size"
                app:name="声音"/>
            <com.android.speaker.base.component.TitleTagView
                android:id="@+id/blog_detail_title_ai_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:textSize="@dimen/blog_detail_title_text_size"
                app:name="AI文稿"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/blog_detail_star_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_star_blue"/>
        <ImageView
            android:id="@+id/blog_detail_translate_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/blog_detail_star_iv"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_translate_en_blue"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/blog_detail_container_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"/>
</LinearLayout>
