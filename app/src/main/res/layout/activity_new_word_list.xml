<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/text_color_FCFCFC"
    android:orientation="vertical">

    <com.android.speaker.base.component.TitleBarLayout
        android:id="@+id/new_word_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.android.speaker.base.component.PagedItemListView
        android:id="@+id/new_word_list_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:divider="#F5F5F5"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:listSelector="@color/transparent"/>

    <TextView
        android:id="@+id/new_word_remove_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@drawable/btn_bg_shape_red"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="移除"/>
</LinearLayout>
