<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <com.android.speaker.base.component.TitleBarLayout
        android:id="@+id/note_detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/note_detail_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text_color_1"
            android:textStyle="bold"
            tools:text="Running late"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/arrow_right_gray"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/common_line_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_note_edit2"
        android:drawablePadding="4dp"
        android:textColor="@color/text_color_48496E"
        android:textSize="14sp"
        android:text="笔记："/>
    <EditText
        android:id="@+id/note_detail_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:enabled="false"
        android:background="@color/white"
        android:textColor="@color/text_color_1"
        android:textSize="14sp"
        tools:text="这里是笔记内容，笔记内容模拟，笔记内容模"/>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCF7F7F7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/note_detail_save_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/btn_bg_shape_purple"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="保存"/>
    </LinearLayout>
</LinearLayout>