<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_FCFCFC"
    android:orientation="vertical">

    <com.android.speaker.base.component.TitleBarLayout
        android:id="@+id/open_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mem_top"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="37dp"
            android:drawableLeft="@drawable/ic_crown_white"
            android:drawablePadding="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="开口说会员"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:layout_weight="1"
        android:background="@drawable/home_bottom_bg_shape"
        android:paddingBottom="20dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.android.speaker.base.component.NoScrollGridView
                        android:id="@+id/open_product_gv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"/>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:id="@+id/open_validate_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_red_bg_shape"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stop_watch"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="#FF0907"
                    android:textStyle="bold"
                    android:text="限时特惠"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="3dp"
                    android:background="#FF0907"/>
                <TextView
                    android:id="@+id/open_time_hour_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vip_time_label_bg"
                    android:paddingHorizontal="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/open_time_minute_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vip_time_label_bg"
                    android:paddingHorizontal="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="59"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/open_time_second_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vip_time_label_bg"
                    android:paddingHorizontal="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="59"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="#FF0907"
                    android:textStyle="bold"
                    android:text="后失效"/>

                <TextView
                    android:id="@+id/open_preferential_price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:textColor="#FF0907"
                    tools:text="-¥19.00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_border_shape"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vip_alipay"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:textSize="16sp"
                        android:textColor="#2D2D2D"
                        android:text="支付宝"/>
                    <ImageView
                        android:id="@+id/open_alipay_check_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_circle_checked"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vip_wx"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:textSize="16sp"
                        android:textColor="#2D2D2D"
                        android:text="微信"/>
                    <ImageView
                        android:id="@+id/open_wx_check_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_circle_uncheck"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vip_left_line_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    android:text="会员权益"/>
                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vip_right_line_shape"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_rights_course_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_border_shape"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="课程畅听"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_color_48496E"
                        android:textSize="12sp"
                        android:text="畅听数百个实用场景课程"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mem_course"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_rights_ai_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_border_shape"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="AI畅聊"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_color_48496E"
                        android:textSize="12sp"
                        android:text="与开口说AI畅聊数百个实用场景"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mem_ai"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_rights_cheap_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_border_shape"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="尊享低价"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_color_48496E"
                        android:textSize="12sp"
                        android:text="尊享精品课程、专项课程会员价"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mem_cheap"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_rights_discount_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_border_shape"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="课程折扣券"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_color_48496E"
                        android:textSize="12sp"
                        android:text="月月领精品课程、专项课程大额券"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mem_discount"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/open_agree_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vip_btn_bg_shape"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="12dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FBB795"
        android:textStyle="bold"
        android:text="同意协议并立即开通"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-8dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color_2"
            android:text="开通会员即表示同意："/>
        <TextView
            android:id="@+id/open_renewal_protocol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color_1"
            android:text="续费协议"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color_2"
            android:text="、"/>
        <TextView
            android:id="@+id/open_service_protocol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color_1"
            android:text="会员服务协议"/>
    </LinearLayout>
</LinearLayout>
