<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <com.android.speaker.base.component.TitleBarLayout
        android:id="@+id/program_detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/program_detail_img_iv"
            android:layout_width="72dp"
            android:layout_height="72dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/program_detail_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="@color/text_color_1"
                android:textStyle="bold"
                tools:text="All Ears English Podcast"/>
            <TextView
                android:id="@+id/program_detail_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/text_color_2"
                tools:text="Lindsay McMahon and Michelle Kaplan"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/program_detail_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/text_color_2"
        tools:text="Are you looking for a new and fun way to learn American English? Come hang out with Lindsay and Michelle from"/>

    <TextView
        android:id="@+id/program_detail_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="12sp"
        android:textColor="@color/text_color_2"
        tools:text="语言学习"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/common_line_color"/>
    <com.android.speaker.base.component.TitleTagView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:name="单集更新"/>

    <com.android.speaker.base.component.PagedItemListView
        android:id="@+id/program_detail_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:divider="@color/transparent"
        android:dividerHeight="16dp"
        android:scrollbars="none"
        android:listSelector="@color/transparent"/>
</LinearLayout>
