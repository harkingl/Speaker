<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2B2C5F">
    <ImageView
        android:id="@+id/chat_top_img_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/chat_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_back_white"/>
            <TextView
                android:id="@+id/chat_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Runing late"/>
            <ImageView
                android:id="@+id/chat_translate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_translate_en"/>
        </RelativeLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/chat_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:id="@+id/chat_indications_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            android:background="@drawable/common_bottom_bg_shape">
            <ListView
                android:id="@+id/chat_data_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:layout_marginHorizontal="10dp"
                android:listSelector="@color/transparent"
                android:paddingTop="30dp"
                android:divider="@color/transparent"
                android:dividerHeight="10dp"
                android:scrollbars="none" />
            <ProgressBar
                android:id="@+id/chat_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="12dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/chat_progress_bg"
                tools:max="100"
                tools:progress="50"/>

            <LinearLayout
                android:id="@+id/chat_bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chat_btn_audio_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_audio"/>
                <ImageView
                    android:id="@+id/chat_btn_input_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/ic_chat_input"/>
                <EditText
                    android:id="@+id/chat_input_et"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:imeOptions="actionSend"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:hint="请输入内容"
                    android:visibility="gone"
                    android:textColorHint="@color/hint_text_color"/>
                <com.android.speaker.chat.audio.AudioButton
                    android:id="@+id/chat_audio_btn"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center"
                    android:background="@drawable/white_bg_shape"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    android:text="按住 说话"/>

                    <ImageView
                        android:id="@+id/chat_tip_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_chat_tip"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

</RelativeLayout>
