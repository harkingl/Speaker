<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_FCFCFC"
    android:orientation="vertical">

    <com.android.speaker.base.component.TitleBarLayout
        android:id="@+id/vip_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mem_top"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="37dp"
            android:drawableLeft="@drawable/ic_crown_white"
            android:drawablePadding="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="开口说会员"/>
        <TextView
            android:id="@+id/vip_validate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="34dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            tools:text="2023.8.23到期"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:layout_weight="1"
        android:background="@drawable/home_bottom_bg_shape"
        android:paddingBottom="20dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vip_left_line_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    android:text="会员权益"/>
                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vip_right_line_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingRight="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_mem_course"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_1"
                    android:text="课程畅听"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_mem_ai"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_1"
                    android:text="AI畅聊"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_mem_cheap"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_1"
                    android:text="尊享低价"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_mem_discount"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_1"
                    android:text="课程折扣券"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_mem_more"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_1"
                android:text="更多权益"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_border_shape"
                android:layout_margin="20dp"
                android:padding="14dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/text_color_1"
                        android:textStyle="bold"
                        android:text="课程折扣券"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_CACACA"
                        android:text="大额券 月月领"/>
                </LinearLayout>
                <com.android.speaker.base.component.NoScrollGridView
                    android:id="@+id/vip_discount_gv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:numColumns="4"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="12dp"
                    android:scrollbars="none"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-20dp"
        android:background="#CCF7F7F7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vip_renewal_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/vip_btn_bg_shape"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="立即续费"/>
    </LinearLayout>
</LinearLayout>
