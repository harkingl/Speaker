<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_color_FCFCFC"
    android:orientation="vertical">

    <com.android.speaker.base.component.TitleBarLayout
        android:id="@+id/word_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/word_progress_bar"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/word_progress_bg"
            android:max="100"
            android:progress="50"/>
        <TextView
            android:id="@+id/word_current_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/text_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2/10"/>
    </LinearLayout>

    <TextView
        android:id="@+id/word_word_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_1"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="running late"/>

    <TextView
        android:id="@+id/word_pronunciation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_CACACA"
        android:textSize="18sp"
        tools:text="/ˈrʌnɪŋ leɪt/"/>
    <TextView
        android:id="@+id/word_explain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_1"
        android:textSize="18sp"
        tools:text="phr. 要迟到了"/>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/word_voice_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_voice_gray"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <com.android.speaker.course.wave.WaveLineView
        android:id="@+id/word_wave_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        app:wlvThickLineWidth="2dp"
        app:wlvFineLineWidth="1dp"
        android:visibility="visible"
        app:wlvBackgroundColor="@android:color/transparent" />
    <ProgressBar
        android:id="@+id/word_bottom_loading_bar"
        style="@style/Spinner"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />
    <TextView
        android:id="@+id/word_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_CACACA"
        android:textSize="12sp"
        android:text="跟读提示：听到“滴”声后开始录音"/>
    <LinearLayout
        android:id="@+id/word_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/word_my_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_my_voice"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:textSize="11sp"
                android:textColor="@color/text_color_CACACA"
                android:text="我的"/>
            <TextView
                android:id="@+id/word_replay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_microphone"
                android:drawablePadding="3dp"
                android:layout_marginLeft="28dp"
                android:gravity="center_horizontal"
                android:textSize="11sp"
                android:textColor="@color/text_color_CACACA"
                android:text="重读"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:id="@+id/word_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/common_green_color"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="90"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/word_score_tv"
                android:layout_alignBottom="@+id/word_score_tv"
                android:layout_marginBottom="5dp"
                android:textColor="@color/common_green_color"
                android:textSize="20sp"
                android:text="分"/>

            <TextView
                android:id="@+id/word_next_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:paddingHorizontal="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg_shape_green"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="下一个"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>