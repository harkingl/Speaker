<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_common_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="30dp"
        android:background="@drawable/white_bg_shape_20"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_1"
            android:text="注销开口说帐号"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color_2"
            android:text="@string/log_off_text1"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_2"
            android:text="@string/log_off_text2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_btn_apply_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/btn_bg_shape_purple"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="提交申请"/>
        <TextView
            android:id="@+id/dialog_btn_think_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_color_2"
            android:text="再想想"/>
    </LinearLayout>
</LinearLayout>