<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg_shape"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:background="@drawable/ic_dialog_bg"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/dialog_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:padding="3dp"
            android:src="@drawable/ic_close_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_210091"
            android:text="开通开口说会员"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_open_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:background="@drawable/btn_bg_shape_purple"
            android:textColor="@color/white"
            android:text="立即开通"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>