<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_common_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:background="@drawable/home_bottom_bg_shape"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dialog_common_view_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close"/>

            <TextView
                android:id="@+id/dialog_common_view_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_color_1"
                android:text="今日目标"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <com.android.speaker.base.component.wheel.WheelView
            android:id="@+id/dialog_common_np"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/dialog_btn_ok_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="22dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/btn_bg_shape_purple"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>