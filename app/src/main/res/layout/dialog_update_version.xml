<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_bg_shape">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dialog_top_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:textColor="@color/text_color_210091"
            android:text="发现新版本"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dialog_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textColor="@color/text_color_48496E"
            tools:text="3.0.2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dialog_update_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:background="@drawable/btn_bg_shape_purple"
            android:textColor="@color/white"
            android:text="立即更新"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dialog_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="17dp"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:text="稍后再说"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>