<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <ListView
        android:id="@+id/ai_analysis_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_marginHorizontal="20dp"
        android:listSelector="@color/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="100dp"
        android:divider="@color/transparent"
        android:dividerHeight="20dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/ai_scroll_select_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_play_flag"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="#3330E3CA"/>
        <TextView
            android:id="@+id/ai_scroll_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"
            android:textColor="@color/common_green_color"
            tools:text="00:24"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ai_bottom_play_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F7F7F7"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:orientation="vertical">
        <com.android.speaker.course.PlayProgressBar
            android:id="@+id/ai_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ai_jump_prev_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_jump_prev"/>
            <ImageView
                android:id="@+id/ai_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:src="@drawable/ic_course_play"/>
            <ImageView
                android:id="@+id/ai_jump_next_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:src="@drawable/ic_jump_next"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
