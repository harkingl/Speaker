<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/text_color_FCFCFC"
    android:paddingLeft="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/me_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_setting"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/me_user_head_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:id="@+id/me_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_color_1"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="185***028"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/ai_label_bg_shape"
            android:paddingVertical="3dp"
            android:paddingHorizontal="7dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="AI"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/me_vip_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/vip_bg_shape2"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vip_bg_shape"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="11dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/me_vip_crown_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_crown_big"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/me_vip_crown_iv"
                        android:layout_alignBottom="@+id/me_vip_crown_iv"
                        android:layout_marginLeft="3dp"
                        android:textSize="18sp"
                        android:textColor="@color/text_color_210091"
                        android:textStyle="bold"
                        android:text="开口说会员"/>
                    <TextView
                        android:id="@+id/me_vip_validate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/me_vip_crown_iv"
                        android:layout_alignLeft="@+id/me_vip_crown_iv"
                        android:layout_marginTop="1dp"
                        android:alpha="0.4"
                        android:textSize="11sp"
                        android:textColor="@color/text_color_210091"
                        tools:text="有效期至2023/06/05"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/me_course_series_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_course_series"
                    android:drawablePadding="2dp"
                    android:textSize="11sp"
                    android:textColor="@color/text_color_210091"
                    android:text="课程畅听"/>
                <TextView
                    android:id="@+id/me_ai_chat_freely_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:drawableTop="@drawable/ic_ai_chat_freely"
                    android:drawablePadding="2dp"
                    android:textSize="11sp"
                    android:textColor="@color/text_color_210091"
                    android:text="AI畅聊"/>
                <ImageView
                    android:id="@+id/me_vip_detail_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingLeft="3dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_arrow_right_purple"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_210091"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_210091"
                    android:text="月月领精品/专项课程会员折扣券"/>
                <TextView
                    android:id="@+id/me_vip_coupon_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_view_bg_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="立即查看"
                    android:textColor="@color/text_color_210091"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_crown_small"
                    android:drawablePadding="3dp"
                    android:textColor="@color/text_color_210091"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="会员权益"/>
                <TextView
                    android:id="@+id/me_vip_rights_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_vip_arrow_right"
                    android:drawablePadding="3dp"
                    android:alpha="0.5"
                    android:textColor="@color/text_color_210091"
                    android:textSize="11sp"
                    android:text="详情"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:background="@color/text_color_210091"/>

            <LinearLayout
                android:id="@+id/me_vip_renewal_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_time_circle"
                    android:drawablePadding="3dp"
                    android:textColor="@color/text_color_210091"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="立即续费"/>

                <TextView
                    android:id="@+id/me_vip_renewal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_vip_arrow_right"
                    android:drawablePadding="3dp"
                    android:alpha="0.5"
                    android:textColor="@color/text_color_210091"
                    android:textSize="11sp"
                    android:text="限时特惠"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/me_unvip_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/me_unvip_bg_shape2"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me_unvip_bg_shape"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="11dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/me_unvip_crown_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_crown_big2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/me_unvip_crown_iv"
                        android:layout_alignBottom="@+id/me_unvip_crown_iv"
                        android:layout_marginLeft="3dp"
                        android:textSize="18sp"
                        android:textColor="@color/text_color_002C91"
                        android:textStyle="bold"
                        android:text="开口说会员"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/me_unvip_course_series_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_course_series2"
                    android:drawablePadding="2dp"
                    android:textSize="11sp"
                    android:textColor="@color/text_color_002C91"
                    android:text="课程畅听"/>
                <TextView
                    android:id="@+id/me_unvip_ai_chat_freely_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:drawableTop="@drawable/ic_ai_chat_freely2"
                    android:drawablePadding="2dp"
                    android:textSize="11sp"
                    android:textColor="@color/text_color_002C91"
                    android:text="AI畅聊"/>
                <ImageView
                    android:id="@+id/me_unvip_detail_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingLeft="3dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_arrow_right_blue"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_002C91"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_002C91"
                    android:text="月月领精品/专项课程会员折扣券"/>
                <TextView
                    android:id="@+id/me_unvip_coupon_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_view_bg_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="立即开通"
                    android:textColor="@color/text_color_002C91"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_crown_small2"
                android:drawablePadding="3dp"
                android:textColor="@color/text_color_002C91"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="会员权益"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/me_unvip_rights_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_arrow_right_blue"
                android:drawablePadding="3dp"
                android:alpha="0.5"
                android:textColor="@color/text_color_002C91"
                android:textSize="11sp"
                android:text="详情"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_time_circle2"
                android:drawablePadding="3dp"
                android:textColor="@color/text_color_002C91"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="立即开通"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/me_unvip_open_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_arrow_right_blue"
                android:drawablePadding="3dp"
                android:alpha="0.5"
                android:textColor="@color/text_color_002C91"
                android:textSize="11sp"
                android:text="限时特惠"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/white_bg_with_border_shape"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/me_function_new_word_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_new_word"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="@color/text_color_1"
                android:textStyle="bold"
                android:text="生词本"/>
            <ImageView
                android:id="@+id/me_function_new_word_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_right_gray"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/me_function_laptop_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_laptop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="@color/text_color_1"
                android:textStyle="bold"
                android:text="笔记本"/>
            <ImageView
                android:id="@+id/me_function_laptop_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_right_gray"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingVertical="13dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/white_bg_with_border_shape"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/me_function_record_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_reloadtime"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_1"
            android:text="学习记录"/>
        <TextView
            android:id="@+id/me_function_collect_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_star"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_1"
            android:text="收藏"/>
        <TextView
            android:id="@+id/me_function_test_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_signal"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_1"
            android:text="等级测试"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_with_border_shape"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingVertical="13dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/me_function_order_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_file"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_1"
                android:text="我的订单"/>
            <TextView
                android:id="@+id/me_function_coupon_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_container"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_1"
                android:text="优惠券"/>
            <TextView
                android:id="@+id/me_function_scan_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_scan"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_1"
                android:text="兑换码"/>
            <TextView
                android:id="@+id/me_function_clock_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_carryout"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_1"
                android:text="每日打卡"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/me_function_help_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_customerservice"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_1"
                android:text="帮助与反馈"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="3"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
