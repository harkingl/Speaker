<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/study_title_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/study_user_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_1"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Hello! 185***028"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/study_user_tv2"
            android:layout_marginLeft="6dp"
            android:background="@drawable/ai_label_bg_shape"
            android:paddingVertical="3dp"
            android:paddingHorizontal="7dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="AI"/>
        <ImageView
            android:id="@+id/study_clock_calendar_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_calendar2"
            android:visibility="gone"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/study_total_clock_times_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/study_clock_calendar_iv2"
            android:layout_marginRight="7dp"
            android:background="@drawable/clock_bg_shape"
            android:paddingVertical="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:textColor="@color/common_purple_color"
            android:textSize="11sp"
            tools:text="累计打卡3天"
            android:visibility="gone"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/study_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/common_purple_color">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_top_bg"/>
            <TextView
                android:id="@+id/study_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Hello! 185***028"/>
            <TextView
                android:id="@+id/study_ai_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/study_user_tv"
                android:layout_alignBottom="@+id/study_user_tv"
                android:layout_marginLeft="6dp"
                android:background="@drawable/ai_label_bg_shape"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:text="AI"/>
            <ImageView
                android:id="@+id/study_clock_calendar_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/study_user_tv"
                android:layout_marginRight="20dp"
                android:visibility="invisible"
                android:src="@drawable/ic_calendar"/>
            <TextView
                android:id="@+id/study_total_clock_times_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/study_clock_calendar_iv"
                android:layout_alignBottom="@+id/study_user_tv"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/clock_bg_shape"
                android:paddingVertical="2dp"
                android:paddingLeft="12dp"
                android:paddingRight="9dp"
                android:textColor="@color/common_purple_color"
                android:textSize="11sp"
                android:visibility="invisible"
                tools:text="累计打卡3天"/>
            <LinearLayout
                android:id="@+id/study_today_goal_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/study_user_tv"
                android:layout_alignLeft="@id/study_user_tv"
                android:layout_marginTop="23dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:text="今日目标"/>
                <ImageView
                    android:id="@+id/study_edit_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/study_today_time_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/study_today_goal_ll"
                android:layout_alignLeft="@+id/study_today_goal_ll"
                android:layout_marginTop="28dp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/study_today_curr_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    tools:text="3"/>
                <TextView
                    android:id="@+id/study_time_split_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="/"/>
                <TextView
                    android:id="@+id/study_today_goal_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="分钟"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/study_today_progress_bar"
                android:layout_width="180dp"
                android:layout_height="4dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@id/study_today_time_rl"
                android:layout_alignLeft="@id/study_today_time_rl"
                android:progressDrawable="@drawable/progress_bg"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="50"/>
            <LinearLayout
                android:id="@+id/study_total_time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/study_total_clock_times_tv"
                android:layout_alignLeft="@+id/study_total_clock_times_tv"
                android:layout_marginTop="64dp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/study_total_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    tools:text="2.3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="小时"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/study_total_time_ll"
                android:layout_alignLeft="@id/study_total_time_ll"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color_2"
                android:textSize="16sp"
                android:text="累计学习"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/study_today_progress_bar"
                android:layout_marginTop="24dp"
                android:background="@drawable/home_bottom_bg_shape"
                android:orientation="vertical">
                <com.android.speaker.base.component.TitleTagView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:name="精选课程"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    tools:visibility="gone"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <com.android.speaker.base.component.NoScrollGridView
                            android:id="@+id/study_course_gv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:numColumns="3"
                            android:scrollbars="none"/>
                        <TextView
                            android:id="@+id/study_course_more_tv"
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="17dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/btn_more_bg_shape"
                            android:textColor="@color/hint_text_color"
                            android:textSize="14sp"
                            android:text="更多课程"/>
                    </LinearLayout>
                </HorizontalScrollView>
                <com.android.speaker.base.component.TitleTagView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:name="开口说"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/open_mouth_bg_shape"
                    android:layout_margin="20dp">
                    <TextView
                        android:id="@+id/study_open_mouth_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="全真场景，自由对话"/>
                    <TextView
                        android:id="@+id/study_open_mouth_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/study_open_mouth_tv1"
                        android:layout_alignLeft="@+id/study_open_mouth_tv1"
                        android:layout_marginTop="6dp"
                        android:lineSpacingExtra="1.5dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:text="数百个实用场景，\n打造独属于你的沉浸式口语环境"/>
                    <TextView
                        android:id="@+id/study_open_mouth_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="23dp"
                        android:layout_marginRight="16dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="更多场景"/>
                    <ImageView
                        android:id="@+id/study_open_mouth_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_open_mouth"/>

                    <LinearLayout
                        android:id="@+id/study_open_mouth_scene_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/study_open_mouth_iv"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/open_mouth_bottom_bg_shape"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="104dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/study_open_mouth_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Running late" />

                            <TextView
                                android:id="@+id/study_open_mouth_tip1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/study_open_mouth_title_tv"
                                android:layout_alignLeft="@id/study_open_mouth_title_tv"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/open_mouth_label_bg_shape"
                                android:paddingHorizontal="3dp"
                                android:paddingVertical="1dp"
                                android:text="商务职场"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/study_open_mouth_tip2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/study_open_mouth_tip1_tv"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="7dp"
                                android:layout_toRightOf="@id/study_open_mouth_tip1_tv"
                                android:background="@drawable/open_mouth_label_bg_shape"
                                android:paddingHorizontal="3dp"
                                android:paddingVertical="1dp"
                                android:text="职场生活"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:visibility="gone"/>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/study_open_mouth_start_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="23dp"
                            android:background="@drawable/btn_start_bg_shape"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="7dp"
                            android:text="立即开始"
                            android:textColor="@color/text_color_1"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/study_open_mouth_oss_iv"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:padding="2dp"
                        android:background="@drawable/img_border_shape"
                        android:layout_alignBottom="@+id/study_open_mouth_scene_ll"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
