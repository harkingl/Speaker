<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/view_title_tv"
        android:layout_alignBottom="@+id/view_title_tv"
        android:orientation="vertical">
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:background="@color/common_green_color"/>
    </LinearLayout>

    <com.android.speaker.base.component.SingleLineZoomTextView
        android:id="@+id/view_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="Running late"/>

    <TextView
        android:id="@+id/view_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_title_tv"
        android:layout_alignLeft="@+id/view_title_tv"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="让我们来学习一下这段对话中的一些常用的表达方式吧"/>
</RelativeLayout>
