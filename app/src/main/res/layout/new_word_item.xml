<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingVertical="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_word_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text_color_1"
            android:textStyle="bold"
            tools:text="Running late"/>
        <TextView
            android:id="@+id/item_word_pronunciation_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text_color_CACACA"
            tools:text="/ˈrʌnɪŋ leɪt/"/>

        <ImageView
            android:id="@+id/item_word_voice_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_question_voice_default"/>
        <ImageView
            android:id="@+id/item_word_check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:src="@drawable/ic_question_voice_default"/>
    </LinearLayout>
    <View
        android:id="@+id/item_rect_view"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/gray_bg_shape_2"/>
    <LinearLayout
        android:id="@+id/item_word_explain_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_word_feature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_CACACA"
            tools:text="phr."/>
        <TextView
            android:id="@+id/item_word_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textColor="@color/text_color_1"
            tools:text="要迟到了"/>
    </LinearLayout>
</LinearLayout>