<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/play_item_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        tools:text="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/play_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text_color_1"
            tools:text="Shopping overseas"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/play_item_vip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vip_border_shape"
                android:layout_marginRight="4dp"
                android:paddingVertical="1dp"
                android:paddingHorizontal="4dp"
                android:textSize="11sp"
                android:textColor="@color/common_purple_color"
                android:text="VIP"
                android:visibility="gone"
                tools:visibility="visible"/>
            <TextView
                android:id="@+id/play_item_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_border_shape"
                android:layout_marginRight="4dp"
                android:paddingVertical="1dp"
                android:paddingHorizontal="6dp"
                android:textSize="11sp"
                android:textColor="@color/common_green_color"
                tools:text="A2"
                android:visibility="gone"
                tools:visibility="visible"/>
            <TextView
                android:id="@+id/play_item_desc_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/text_color_2"
                tools:text="砍价那可真是一项技术活！碰到心仪的商…"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>