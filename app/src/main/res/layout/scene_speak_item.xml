<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/item_left_parent_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_left_icon_tv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:alpha="0.3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="J"
            android:background="@drawable/purple_circle_bg_shape"/>
        <TextView
            android:id="@+id/item_left_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_left_icon_tv"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_2"
            android:textStyle="bold"
            tools:text="Monica"/>
        <LinearLayout
            android:id="@+id/item_left_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_item_left_bg_shape"
            android:layout_alignLeft="@+id/item_left_name_tv"
            android:layout_below="@+id/item_left_name_tv"
            android:layout_marginTop="1dp"
            android:layout_marginRight="44dp"
            android:paddingVertical="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_left_title_en_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="Hey, James. What’s up?"/>

                <TextView
                    android:id="@+id/item_left_title_ch_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_2"
                    tools:text="Hi, Monica. I’m really sorry but I’m "/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_left_voice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:padding="3dp"
                android:src="@drawable/chat_item_voice_default"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right_parent_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_right_icon_tv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:alpha="0.3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="J"
            android:background="@drawable/purple_circle_bg_shape"/>
        <TextView
            android:id="@+id/item_right_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_right_icon_tv"
            android:layout_alignTop="@+id/item_right_icon_tv"
            android:layout_marginRight="7dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_2"
            android:textStyle="bold"
            tools:text="James"/>
        <LinearLayout
            android:id="@+id/item_right_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_item_right_bg_shape"
            android:layout_alignRight="@+id/item_right_name_tv"
            android:layout_below="@+id/item_right_name_tv"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="44dp"
            android:paddingVertical="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_right_title_en_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="Hey, James. What’s up?"/>

                <TextView
                    android:id="@+id/item_right_title_ch_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_2"
                    tools:text="Hi, Monica. I’m really sorry but I’m "/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_right_voice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:padding="3dp"
                android:src="@drawable/chat_item_voice_default"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>