<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/item_left_parent_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_left_icon_tv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:alpha="0.3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="J"
            android:background="@drawable/purple_circle_bg_shape"/>
        <TextView
            android:id="@+id/item_left_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_left_icon_tv"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_2"
            android:textStyle="bold"
            tools:text="Monica"/>
        <LinearLayout
            android:id="@+id/item_left_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_item_left_bg_shape"
            android:layout_alignLeft="@+id/item_left_name_tv"
            android:layout_below="@+id/item_left_name_tv"
            android:layout_marginTop="1dp"
            android:layout_marginRight="44dp"
            android:paddingVertical="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_left_title_en_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="Hey, James. What’s up?"/>

                <TextView
                    android:id="@+id/item_left_title_ch_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_2"
                    tools:text="Hi, Monica. I’m really sorry but I’m "/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_left_voice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:padding="3dp"
                android:src="@drawable/chat_item_voice_default"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right_parent_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_right_icon_tv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:alpha="0.3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="J"
            android:background="@drawable/purple_circle_bg_shape"/>
        <TextView
            android:id="@+id/item_right_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_right_icon_tv"
            android:layout_alignTop="@+id/item_right_icon_tv"
            android:layout_marginRight="7dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_2"
            android:textStyle="bold"
            tools:text="James"/>
        <LinearLayout
            android:id="@+id/item_right_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/speak_chat_item_right_bg_shape"
            android:layout_alignRight="@+id/item_right_name_tv"
            android:layout_below="@+id/item_right_name_tv"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="44dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">
                <ImageView
                    android:id="@+id/item_right_state_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chat_sync"/>
                <TextView
                    android:id="@+id/item_right_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_right_state_iv"
                    android:layout_marginLeft="7dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_00B49B"
                    android:layout_centerVertical="true"
                    tools:text="发送中"/>
                <ImageView
                    android:id="@+id/item_right_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_up"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/item_right_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="9dp"
                android:paddingVertical="12dp"
                android:background="@drawable/speak_chat_item_right_bottom_bg_shape"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_right_title_en_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="Hey, James. What’s up?"/>
                <ImageView
                    android:id="@+id/item_right_voice_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:src="@drawable/chat_item_voice_default"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_right_analysis_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_chat_edit"
                    android:drawablePadding="7dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_00B49B"
                    android:textStyle="bold"
                    android:text="名师指点"/>
                <TextView
                    android:id="@+id/item_right_stand_answer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="“Hi, Monica. I’m really sorry but I’m running late this morning. I might not make it to the meeting on time."/>
                <TextView
                    android:id="@+id/item_right_analysis_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_00B49B"
                    tools:text="“Hey, it's me”是在电话中随意介绍自己的一种方式。你也可以说“I'm gonna be a bit late”或“I'm running behind schedule”，代替“running late”"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>