<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/item_img_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_circle_green"/>

    <TextView
        android:id="@+id/item_title_zh_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_img_iv"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/text_color_1"
        tools:text="告知Monica你可能要迟到了，并告知她迟到原因：堵车。"/>
    <TextView
        android:id="@+id/item_title_en_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title_zh_tv"
        android:layout_alignLeft="@+id/item_title_zh_tv"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:textColor="@color/text_color_2"
        tools:text="Notify Monica that you may be late and inform her of the reason for being late: traffic jam."/>

</RelativeLayout>