<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_left_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="0:15"/>
        <TextView
            android:id="@+id/view_right_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2:02"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_progress_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:paddingHorizontal="6dp"
        android:background="@color/common_line_color">
        <com.android.speaker.listen.ColumnProgressView
            android:id="@+id/view_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/view_slide_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/ic_blog_slide"/>
    </RelativeLayout>
</LinearLayout>
